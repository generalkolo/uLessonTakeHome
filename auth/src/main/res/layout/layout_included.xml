<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="label"
            type="String" />

        <variable
            name="bindingVariable"
            type="String" />

        <variable
            name="inputTye"
            type="Integer" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout_label"
            style="@style/GokadaSuperAppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@{label}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Label String" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginStart="4dp"
            android:drawablePadding="@dimen/gokada_super_app_padding"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_round_grey_border"
            android:inputType="@{inputTye}"
            android:padding="@dimen/gokada_super_app_padding"
            android:text="@={bindingVariable}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/layout_label"
            tools:hint="Enter your pin" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>